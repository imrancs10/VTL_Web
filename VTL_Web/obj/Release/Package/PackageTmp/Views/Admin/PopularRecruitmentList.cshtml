<section class="wrapper">
    <div class="row">
        <div class="col-lg-12">
            <section class="card">
                <header class="card-header">
                    Popular Recruitment Details
                </header>
                <div class="col-md-12">
                    <div class="row">
                        <div class="table-responsive" style="overflow:auto!important;">
