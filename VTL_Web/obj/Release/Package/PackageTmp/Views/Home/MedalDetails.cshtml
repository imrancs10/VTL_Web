@using UPPRB_Web.Models.Masters;
@{
    ViewBag.Title = "MedalDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var medalData = ViewData["MedalData"] as List<MedalEntryModel>;
    var noticeType = ViewData["NoticeType"] as List<NoticeTypeModel>;
}

<section class="hero-slider">
    <div class="pr-15 pl-15">
        <div class="row">
            @Html.Partial("_Galary_SideMenu", noticeType)
            <div class="col-lg-9 w_content pt-20 mt-0">

                <h2 class="w-bgph ">Medal Gallery</h2>
                <hr>
                <div class="clr"></div>
                <div>
                    <div class="table-responsive">
                        <div>
                            <table class="table" cellspacing="0" id="GridView1" style="border-color:White;border-style:None;border-collapse:collapse;">
                                @foreach (var item in medalData)
                                {
                                    <tr>
                                        <td>
                                            <div class="row mb-20">
                                                <div class="col-md-6" style="padding: 0px; margin: 0px">
                                                    <div class="">
                                                        <img title="@item.ToWhom" src="~/FilesUploaded/Medal/@item.FileName" onclick="openFullImg('@item.ToWhom')" style="max-width:100%;max-height:100%">
                                                    </div>
                                                </div>
                                                <div class="col-md-6 pl-20" style="padding: 0px; margin: 0px">
                                                    <h5>
                                                        <span id="Label1_0">Name: @item.ToWhom</span>
                                                    </h5>
                                                    <h5>
                                                        <span id="Label1_0">Medal Name: @item.MedalCategoryName</span>
                                                    </h5>
                                                    <h5>
                                                        <span id="Label1_0">Given By: @item.GivenBy</span>
                                                    </h5>
                                                    <h5>
                                                        <span id="Label1_0">Date: @item.MedalGivenDate.Value.ToString("dd/MM/yyyy")</span>
                                                    </h5>
                                                    <h5>
                                                        <span id="Label1_0">Description: @item.MedalDescription</span>
                                                    </h5>
                                                </div>
                                                <div class="clear"></div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </table>

                        </div>

                    </div>

                    <div class="clearfix"></div>
                </div>
            </div>
</section>
<script>

    var FullImgBox = document.getElementById("FullImgBox")
    var FullImg = document.getElementById("FullImg")

    function openFullImg(subject) {
        window.location.href = "/Home/PhotoGalleryDetail?Subject=" + subject;
        //FullImgBox.style.display = "flex";
        //FullImg.src = pic;
    }

    function closeFullImg() {
        FullImgBox.style.display = "none";
    }
</script>
<script type="text/javascript">
    $(document).ready(function () {
        $('.navbar-nav').find('li').removeClass('active');
        $('a[href="/Home/MedalDetails"]').parent().addClass('active')
    });
</script>

<script>

    $("#nav-btn").click(function () {
        $("nav1").toggle("slow");
    });


</script>