@using UPPRB_Web.Models.Masters;
@{
    ViewBag.Title = "Promotion";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var PromotionType = ViewData["PromotionType"] as IEnumerable<PromotionModel>;
    var PromotionDetail = ViewData["PromotionDetail"] as List<PromotionModel>;
}

<section class="hero-slider">
    <div class="pr-15 pl-15">
        <div class="row">
            @Html.Partial("_Promotion_SideMenu", PromotionType)
            <div class="col-lg-9 w_content pt-20 mt-0">
                <h3 class="w-bgph">
                    @if (PromotionDetail.Any())
                    {
                        <span>@PromotionDetail.FirstOrDefault().ParentName</span>
                    }

                </h3>
                <hr><br />
                <div class="clr"></div>
                @foreach (var promotion in PromotionDetail)
                {
                    <h6>
                        @if (!string.IsNullOrEmpty(promotion.FileName))
                        {
                            <a href='~/FilesUploaded/Promotion/@promotion.FileName' title='Click to view more' target='_blank'>
                                @promotion.Subject
                            </a>
                        }
                        else if (!string.IsNullOrEmpty(promotion.FIleURL))
                        {
                            <a href='@promotion.FIleURL' title='Click to view more' target='_blank'>
                                @promotion.Subject
                            </a>
                        }
                        else
                        {
                            <a href="/Home/Promotion?promotionId=@promotion.Id" style="text-align: center; color: #191970">@promotion.Subject</a>
                        }
                    </h6>
                    <hr><br />
                }
                @*<h4><a href="/Home/InfoAboutPromotion" style="text-align: center; color: #191970">Important information about Promotion<br /> (प्रोन्नति से संबंधित महत्वपूर्ण जानकारियाँ)</a></h4><br />
                    <hr />*@
                <div class="clr"></div>
                <hr>
            </div>
            <div class="clearfix"></div>
        </div>

        <div class="clearfix"></div>
    </div>
</section>
<script>

    $("#nav-btn").click(function () {
        $("nav1").toggle("slow");
    });


</script>
<script type="text/javascript">
    $(document).ready(function () {
        $('.navbar-nav').find('li').removeClass('active');
        $('a[href="/Home/Promotion"]').parent().addClass('active')
    });
</script>