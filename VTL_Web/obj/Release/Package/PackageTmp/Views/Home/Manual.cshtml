@using VTL_Web.Models.Masters;
@{
    ViewBag.Title = "Manual";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var noticeType = ViewData["NoticeType"] as List<NoticeTypeModel>;
}

<section class="hero-slider">
    <div class="pr-15 pl-15">
        <div class="row">
            @Html.Partial("_Manual_SideMenu", noticeType)
            <div class="col-lg-9 w_content pt-20 mt-0">                
                <h2 class="w-bgph">Recruitment Rules</h2>
                    @foreach (var item in noticeType)
                    {
                        <h3 class="w-hd-u">@item.LookupName</h3>
                        <ul class="w_ul">
                            @foreach (var category in item.NoticeCategories)
                            {
                                <li>
                                    <a href="/Home/Manual_Detail?noticeId=@item.LookupId&categoryId=@category.LookupId">
                                        @category.LookupName
                                        @*<img id="Image1_0" class="w_fl_ico" src="~/Content/images/new.gif">*@
                                    </a>
                                </li>
                            }
                        </ul>
                        <br>
                    }
                    <div class="clearfix"></div>
                
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
</section>


<script>

    $("#nav-btn").click(function () {
        $("nav1").toggle("slow");
    });


</script>

<script type="text/javascript">
    $(document).ready(function () {
        $('.navbar-nav').find('li').removeClass('active');
        $('a[href="/Home/About"]').parent().addClass('active')
    });
</script>

