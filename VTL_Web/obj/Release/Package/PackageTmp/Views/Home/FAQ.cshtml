@using UPPRB_Web.Models.Masters;
@{
    ViewBag.Title = "FAQ";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var psData = ViewData["FAQData"] as List<FAQEntryModel>;
    int index = 1;
}
<section class="hero-slider">
    <!-- /. ROW  -->
    <div class="pr-15 pl-15">
        <div class="row">
            @Html.Partial("_FAQ_SideMenu")
            <div class="col-lg-9 w_content pt-20 mt-0">
                <h2 class="w-bgph">FAQ</h2>
                <hr>
                <div class="clr"></div>
                <div class="panel-body">
                    <div class="panel-group" id="accordion">
                        @foreach (var faq in psData)
                        {
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h4 class="panel-title">
                                        <a data-toggle="collapse" data-parent="#accordion" href="#collapse@(index)" class="collapsed">
                                            <span class="fa fa-plus">@index - </span> @faq.FAQ_Question
                                        </a>
                                    </h4>
                                </div>
                                <div id="collapse@(index)" class="panel-collapse collapse" style="height: auto">
                                    <div class="panel-body">
                                        @faq.FAQ_Answer
                                    </div>
                                </div>
                            </div>
                            {
                                index = index + 1;
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script>

    $("#nav-btn").click(function () {
        $("nav1").toggle("slow");
    });


</script>