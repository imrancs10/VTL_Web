<body class="login-body">
    <div class="container">
        <div class="form-signin">

            <center style="background-color: #d61111;">

                <img src="~/Content/Images/LOGO.bmp" style="width:100px; height:100px; padding:10px;" alt="Uttar Pradesh Police Recruitment & Promotion Board">
            </center>
            <h2 class="form-signin-heading fw-bolder">Uttar Pradesh Police Recruitment & Promotion Board</h2>
            <h2 class="form-signin-heading fw-bolder" style="color:yellow;">Forget Password</h2>
            <div id="captcha" class="login-wrap">

                <input type="text" class="form-control" placeholder="User Name" autofocus name="username">
                <input class="form-control" id="mobile" placeholder="Mobile Number" name="mobile" type="text" value="" size="30" />
                <input type="text" class="form-control" placeholder="Email ID" name="password" >
                <button class="btn btn-lg btn-login btn-block" type="submit">Submit</button>              

                @*<div class="registration">
            <a class="" href="/">
                Go Back to Home Page
            </a>
        </div>*@

            </div>

            <!-- Modal -->
            <div aria-hidden="true" aria-labelledby="myModalLabel" role="dialog" tabindex="-1" id="myModal" class="modal fade">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h4 class="modal-title">Forgot Password ?</h4>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <p>Enter your e-mail address below to reset your password.</p>
                            <input type="text" name="email" placeholder="Email" autocomplete="off" class="form-control placeholder-no-fix">

                        </div>
                        <div class="modal-footer">
                            <button data-dismiss="modal" class="btn btn-default" type="button">Cancel</button>
                            <button class="btn btn-success" type="button">Submit</button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- modal -->


            <div class="clearfix"></div>
        </div>
    </div>
</body>

