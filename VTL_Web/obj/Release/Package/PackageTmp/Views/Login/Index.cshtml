<body class="login-body">
    <div class="container">
        <div class="form-signin">
            <center style="background-color: #d61111;">

                <img src="~/Content/Images/LOGO.bmp" style="width:100px; height:100px; padding:10px;" alt="Uttar Pradesh Police Recruitment & Promotion Board">
            </center>
            <h2 class="form-signin-heading fw-bolder">Uttar Pradesh Police Recruitment & Promotion Board</h2>
            <div id="captcha" class="login-wrap">
                @using (Html.BeginForm("GetLogin", "Login", FormMethod.Post))
                {
                    <input type="text" class="form-control" placeholder="User ID" autofocus name="username" id="username">
                    <i class="fa fa-eye icon" onclick="changeInputType('password')"></i>
                    <input type="password" class="form-control" placeholder="Password" name="password" id="password">
                    if (IsCaptchaEnable == true)
                    {
                        @Html.Captcha(5)
                    }
                    if (IsOTPEnable)
                    {
                        <input type="hidden" value="@IsOTPEnable.ToString()" id="hdnIsOTPEnable" name="hdnIsOTPEnable" />
                        <input type="text" style="display:none" class="form-control" placeholder="Enter OTP Here" autofocus name="otp" id="otpNumber">
                        <button class="btn btn-lg btn-login btn-block" id="btnSignIn" style="display:none" type="button">Sign in</button>
                        <button class="btn btn-success" type="button" id="btnGetOTP">Get OTP</button>
                    }
                    else
                    {
                        <input type="hidden" value="@IsOTPEnable.ToString()" id="hdnIsOTPEnable" name="hdnIsOTPEnable" />
                        <button class="btn btn-lg btn-login btn-block" id="btnSignIn" type="button">Sign in</button>
                    }
                    <p>
                        <span class="pull-right">
                            <a href="/Login/ForgetPassword"> Forgot Password?</a>
                        </span>
                    </p>
                }

                @*<div class="registration">
                        <a class="" href="/">
                            Go Back to Home Page
                        </a>
                    </div>*@

            </div>

            <!-- Modal -->
            <div aria-hidden="true" aria-labelledby="myModalLabel" role="dialog" tabindex="-1" id="myModal" class="modal fade">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h4 class="modal-title">Forgot Password ?</h4>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <p>Enter your e-mail address below to reset your password.</p>
                            <input type="text" name="email" placeholder="Email" autocomplete="off" class="form-control placeholder-no-fix">

                        </div>
                        <div class="modal-footer">
                            <button data-dismiss="modal" class="btn btn-default" type="button">Cancel</button>
                            <button class="btn btn-success" type="button">Submit</button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- modal -->

        </div>
    </div>
